doctype html
html
  head
    title Sign in!
    link(rel='stylesheet', href='/stylesheets/index.css')
    script(type='text/javascript' src='/javascripts/jQuery.js')
    script(type='text/javascript' src='/javascripts/Loginclient.js')
  body
    h1 Sign in
    if error == true
      span.serverError 用户名或密码错误！
    form(method = 'POST' action = 'login')#signin
      div.username
        span 用户名
        input(name = 'username')
      div.password
        span 密码
        input(type = 'password' name = 'password')
      div.button
        input(type = 'button' value = '注册')#reg
        input(type = 'submit' value = '登录')#submit
  
  
